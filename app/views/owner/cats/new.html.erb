<div class="container">
  <h1 class="form-add-cat">New Cat</h1>
  <div class="row">
    <div class="col-12 col-lg-6">
      <%= simple_form_for [:owner ,@cat] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :breed %>
        <%= f.input :age %>
        <%= f.input :price_per_day %>
        <%= f.input :photo, label: "Add photo", as: :file %>
        <%= f.button :submit, "Add cat", class: "btn-home mb-4" %>
     <% end %>
    </div>
    <div class="col-12 col-lg-6">
      <%= image_tag "chat-livre.png"%>
    </div>
  </div>
</div>
