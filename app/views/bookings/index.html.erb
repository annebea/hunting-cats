<div class="container-header">
  <h1>List of my bookings</h1>
</div>

<div class="container-index">
      <% @bookings.each do |booking| %>
        <% if booking.user_id == current_user.id %>
          <div class="card-trip" >
            <%= cl_image_tag booking.cat.photo.key, height: 300, width: 500, crop: :fill %>
            <div class="card-trip-infos">
              <div>
                <h3> <%= booking.cat.name %> </h3>
                <h2> Starting_date: <%= booking.starting_date %> </h2>
                <h2> Ending_date: <%= booking.ending_date %> </h2>
                <!-- <h2> class="card-trip-pricing" > total_price: <%= booking.total_price %> â‚¬ </h2> -->
                <!-- <h2> Status: <%= booking.status %> </h2> -->
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
</div>
