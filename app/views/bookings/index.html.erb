<h1 class="container-header page-title">My bookings</h1>

<div class="container-index-booking">
  <% current_user.bookings.each do |booking| %>
    <div class="card-product" >
      <%= cl_image_tag booking.cat.photo.key, width: 300, height: 200, crop: :fill %>
      <div class="card-product-infos-bookings">
        <div class= "name">
          <h1><%= link_to booking.cat.name, cat_path(booking.cat) %> </h1>
          <p>Booked for <%= (booking.ending_date - booking.starting_date).to_i %> days from <%= booking.starting_date.strftime("%B %d, %Y") %> </p>
        </div>
        <div class="price">
          <p><%= booking.total_price %> â‚¬ </p>
        </div>
        <div class="price">
          <% case booking.status %>
            <% when "pending" %>
              <i class="fas fa-hourglass-half"></i>
            <% when "accepted" %>
              <i class="fas fa-check"></i>
            <% when "rejected" %>
              <i class="fas fa-times"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
