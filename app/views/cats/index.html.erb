<h1 class="container-header page-title">Find your hunter !</h1>


<div class="main-container">
  <div class="container-index">
    <% @cats.each do |cat| %>
      <div class="card-trip card-trip-index" >
        <div>
          <%= cl_image_tag cat.photo.key, height: 300, width: 700, crop: :fill %>
        </div>

        <div class="card-trip-infos-index-cats">
          <div>
           <h3><%= link_to cat.name, cat_path(cat) %></h3>
            <div class="card-trip-mouses">
              <% unless cat.performance.nil? %>
                <% cat.performance.times do %>
                  <%= image_tag "pink_mouse.svg", :width => "7%" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <h4> <%= cat.price_per_day %> â‚¬ / day</h4>
        </div>
      </div>
    <% end %>
  </div>
    <div id="map"
     style="width: 30%; "
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
