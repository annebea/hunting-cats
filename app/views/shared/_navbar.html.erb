<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to cats_path, class: "navbar-brand" do %>
    <%= image_tag "hunting-cats-logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Login', new_user_session_path, class: "btn btn-primary mx-4" unless user_signed_in? %>
      </li>
      <li class="nav-item">
        <%= link_to 'Sign-up', new_user_registration_path, class: "btn btn-primary mx-4" unless user_signed_in? %>
      </li>

      <li class="nav-item dropdown">
        <% if user_signed_in? %>
          <% unless current_user.avatar.key.nil?  %>
            <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle" , id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My cats bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Create a cat", new_owner_cat_path, class: "dropdown-item" %>
            <%= link_to "All my cats", owner_cats_path, class: "dropdown-item" if current_user.cats.any? %>
            <%= link_to "My rented cats bookings", owner_bookings_path, class: "dropdown-item" unless current_user.cats.nil? %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item " if user_signed_in? %>
          </div>
        <% end %>
      </li>
    </ul>
  </div>
</div>
