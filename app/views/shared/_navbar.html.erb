<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "LogoCatsOrange-12.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse navbar-lewagon" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item lien-navbar">
          <%= link_to 'ALL CATS', cats_path, class: "lien-navbar"%>
        </li>
        <li class="nav-item lien-navbar">
          <%= link_to 'MY BOOKINGS',  bookings_path, class: "lien-navbar" %>
        </li>
        <li class="nav-item lien-navbar">
          <%= link_to 'ADD A CAT',  new_owner_cat_path, class: "lien-navbar"%>
        </li>
        <li class="nav-item dropdown nav-drop">
                <a class="nav-item dropdown-toggle lien-navbar" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  MY OWN CATS
                </a>
                <div class="dropdown-menu " aria-labelledby="navbarDropdown">
                  <%= link_to 'MY CATS',  owner_cats_path, class: "dropdown-item lien-drop "%>
                  <%= link_to "MY CATS RENTS", owner_bookings_path, class: "dropdown-item lien-drop"%>
                </div>
              </li>
        <li class="nav-item dropdown">
          <% if user_signed_in? %>
            <% unless current_user.avatar.key.nil?  %>
              <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle" , id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item lien-drop" if user_signed_in? %>
            </div>
          <% end %>
        </li>
      <% else %>
         <li class="nav-item lien-navbar lien-logout">
          <%= link_to 'ALL CATS', cats_path, class: "lien-navbar"%>
        </li>
        <li class="nav-item">
          <%= link_to 'Login', new_user_session_path, class: "btn btn-warning btn-home mb-4 btn-login-signin" unless user_signed_in? %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign-up', new_user_registration_path, class: "btn btn-warning btn-home mb-4 btn-login-signin" unless user_signed_in? %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
